AT_SETUP([AC_PROG_CPP without warnings])

# Ignore if the cpp in $PATH doesn't work
AT_CHECK([[echo '#include <stdio.h>' | cpp || exit 77]],
  [], [ignore], [ignore])

# A cpp which exit status is meaningless.
AT_DATA([mycpp],
[[#! /bin/sh
cpp "$@"
exit 0
